    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Streamlit App (Windows - venv)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "--server.port=8501"
            ],
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "console": "externalTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Streamlit App - main.py (Windows - venv)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "src/app/main.py",
                "--server.port=8501"
            ],
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "console": "externalTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}